# RISC-V 32位配置文件
CONFIG_TARGET_PLATFORM="riscv32"
CONFIG_BOARD_PLATFORM="generic"
CONFIG_BUILD_TYPE="Release"
CONFIG_TOOLCHAIN_FILE="riscv32-linux-musl.cmake"
CONFIG_TOOLCHAIN_PREFIX="riscv32-linux-musl"
CONFIG_DESCRIPTION="RISC-V 32位嵌入式Linux系统"
CONFIG_ARCH="riscv32"
CONFIG_CPU="rv32imac"

# 功能配置
CONFIG_ENABLE_AUDIO=y
CONFIG_ENABLE_CODECS=y
CONFIG_ENABLE_OPUS=y
CONFIG_ENABLE_MCP=y
CONFIG_ENABLE_WEBSOCKET=y
CONFIG_ENABLE_PLAYER=y
CONFIG_ENABLE_LOGGING=y
CONFIG_LOG_LEVEL=3
CONFIG_ENABLE_NETWORK=y
CONFIG_NETWORK_BUFFER_SIZE=8192
CONFIG_MAX_CONNECTIONS=10