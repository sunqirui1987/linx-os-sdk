# LN882H 配置文件
CONFIG_TARGET_PLATFORM="ln882h"
CONFIG_BOARD_PLATFORM="ln882h"
CONFIG_BUILD_TYPE="Release"
CONFIG_TOOLCHAIN_FILE="arm-linux-gnueabihf.cmake"
CONFIG_TOOLCHAIN_PREFIX="arm-linux-gnueabihf"
CONFIG_DESCRIPTION="LN882H WiFi芯片开发板"
CONFIG_ARCH="arm"
CONFIG_CPU="cortex-a7"
CONFIG_FPU="neon-vfpv4"
CONFIG_FLOAT_ABI="hard"

# 功能配置
CONFIG_ENABLE_AUDIO=y
CONFIG_ENABLE_CODECS=y
CONFIG_ENABLE_OPUS=y
CONFIG_ENABLE_MCP=y
CONFIG_ENABLE_WEBSOCKET=y
CONFIG_ENABLE_PLAYER=y
CONFIG_ENABLE_LOGGING=y
CONFIG_LOG_LEVEL=3
CONFIG_ENABLE_NETWORK=y
CONFIG_NETWORK_BUFFER_SIZE=8192
CONFIG_MAX_CONNECTIONS=10