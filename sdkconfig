# ESP32 配置文件
CONFIG_TARGET_PLATFORM="esp32"
CONFIG_BOARD_PLATFORM="esp32"
CONFIG_BUILD_TYPE="Release"
CONFIG_TOOLCHAIN_FILE="esp32.cmake"
CONFIG_TOOLCHAIN_PREFIX="xtensa-esp32-elf"
CONFIG_DESCRIPTION="ESP32 WiFi+蓝牙微控制器"
CONFIG_ARCH="xtensa"
CONFIG_CPU="esp32"
CONFIG_IDF_TARGET="esp32"

# 功能配置
CONFIG_ENABLE_AUDIO=y
CONFIG_ENABLE_CODECS=y
CONFIG_ENABLE_OPUS=n
CONFIG_ENABLE_MCP=y
CONFIG_ENABLE_WEBSOCKET=y
CONFIG_ENABLE_PLAYER=y
CONFIG_ENABLE_LOGGING=y
CONFIG_LOG_LEVEL=3
CONFIG_ENABLE_NETWORK=y
CONFIG_NETWORK_BUFFER_SIZE=4096
CONFIG_MAX_CONNECTIONS=5